{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{#is "home"}}
    {{#if @site.description}}
    <header class="page-head">
        <img src="https://blog.hentaios.com/content/images/2021/08/Description.png" alt="Beyond The Joke">
    </header>
    {{/if}}
{{/is}}

<div class="post-feed">
    {{#foreach posts}}

        {{!-- The tag below includes the markup for each post - partials/post-card.hbs --}}
        {{> "post-card"}}

    {{/foreach}}
</div>
